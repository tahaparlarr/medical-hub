@model MedicalHub.Models.Slider

<div class="row mb-5">
    <div class="d-flex justify-content-between ">
        <h4 class="text-light">
            Slider Ekle
        </h4>
    </div>
</div>

<section>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="bg-mirage border border-secondary rounded-3 w-100 p-5">
            <div class="row mb-5">
                <div class="col-6">
                    <div class="mb-3">
                        <label for="title" class="form-label text-light">Başlık</label>
                        <input asp-for="Title" type="text" id="title" class="form-control" placeholder="Slider Başlığı" />
                    </div>
                    <div class="mb-3">
                        <label for="title" class="form-label text-light">Görsel Yönlendirme Link</label>
                        <input asp-for="LinkUrl" type="url" id="title" class="form-control" placeholder="https://..." />
                    </div>
                    <div class="mb-3">
                        <div class="d-flex gap-3 w-100">
                            <div class="d-flex flex-column w-50">
                                <label for="order" class="form-label text-light">Sıra</label>
                                <input asp-for="Order" min="1" type="number" id="order" class="form-control" placeholder="1" />
                            </div>

                            <div class="d-flex flex-column w-25">
                                <label for="isActive" class="form-label text-light">Aktif / Pasif</label>

                                <div class="d-flex align-items-center h-100">
                                    <div class="form-check form-switch ps-0">
                                        <input asp-for="IsActive" class="form-check-input fs-4 m-0" type="checkbox" role="switch" id="isActive" name="IsActive" checked style="cursor: pointer;">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div id="dropZone" class="border border-dashed h-100 rounded-3 d-flex flex-column align-items-center justify-content-center text-light fs-4 mb-3 position-relative" style="cursor: pointer; transition: all 0.2s;">

                        <div id="dropContent" class="text-center pointer-event-none">
                            <i class="bi bi-upload text-secondary fs-2"></i>
                            <div class="mt-2">Görseli Sürükleyip Bırakın<br>veya Tıklayın</div>
                        </div>

                        <input asp-for="ImageUpload" type="file" id="fileInput" accept="image/*" hidden />
                    </div>

                    <div class="text-secondary">
                        Önerilen boyut: 1920x600px
                    </div>
                </div>
            </div>

            <div>
                <div class="row">
                    <div class="d-flex gap-2 w-100 justify-content-end">
                        <button class="btn btn-secondary">İptal</button>
                        <button class="btn btn-light">Kaydet</button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</section>