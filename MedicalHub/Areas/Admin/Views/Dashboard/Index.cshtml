<div class="row mb-3">
    <h4 class="text-light">
        Kontrol Paneli
    </h4>
</div>

<section>
    <div class="row gap-3">
        <div class="col-12 col-md-3">
            <div class="bg-mirage border border-secondary rounded-3 p-3 text-light h-100">
                <div class="d-flex justify-content-between align-items-start">
                    <div class="d-flex flex-column gap-3">
                        <i class="bi bi-file display-4"></i>
                        <a asp-controller="Slider" asp-action="Index" class="btn btn-light btn-sm text-nowrap">
                            Tümünü Gör <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>

                    <div class="text-end">
                        <span class="display-6 fw-bold d-block">@ViewBag.SliderCount</span>
                        <span class="text-white-50 text-uppercase small">Slider</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>