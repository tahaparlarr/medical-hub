<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title> Nobelyum - Yönetici Paneli</title>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="~/lib/splide/splide.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.min.css" asp-append-version="true" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <header class="col-md-3 col-lg-2 px-0 border-end border-secondary min-vh-100 d-none d-md-block">

                <nav class="d-flex flex-column align-items-start p-3 min-vh-100">
                    <a href="/" class="navbar-brand w-100 mb-4 px-3">
                        <img src="~/images/light-logo.svg" width="120" alt="Logo" />
                    </a>

                    <ul class="nav nav-pills flex-column mb-auto w-100" id="menu">
                        <li class="nav-item w-100 mb-1">
                            <a asp-controller="Slider" asp-action="Index" is-active-route class="nav-link align-middle">
                                <i class="bi-file"></i> <span class="ms-2">Slider</span>
                            </a>
                        </li>
                        <li class="nav-item w-100 mb-1">
                            <a asp-controller="Article" asp-action="Index" is-active-route class="nav-link align-middle">
                                <i class="bi-book"></i> <span class="ms-2">Yazılar</span>
                            </a>
                        </li>
                        <li class="nav-item w-100 mb-1">
                            <a asp-controller="Product" asp-action="Index" is-active-route class="nav-link align-middle">
                                <i class="bi-bag"></i> <span class="ms-2">Ürünler</span>
                            </a>
                        </li>
                    </ul>

                    <hr class="w-100 text-secondary my-3">

                    <ul class="nav nav-pills flex-column w-100">
                        <li class="nav-item w-100">
                            <a asp-controller="Profile" asp-action="Index" is-active-route class="nav-link align-middle">
                                <i class="bi-person"></i> <span class="ms-2">Profil</span>
                            </a>
                        </li>
                    </ul>

                </nav>
            </header>

            <div class="col mt-5 px-5 py-3">
                @RenderBody()
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/splide/splide.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        AOS.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
