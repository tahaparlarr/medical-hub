<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicalHub.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container py-2">
            <div class="d-flex justify-content-between align-items-center">

                <div class="logo">
                    <a href="#">
                        <img src="/images/logo.png" width="62" alt="Logo" />
                    </a>
                </div>

                <nav>
                    <ul class="nav gap-3">
                        <li class="nav-item"><a class="nav-link" href="#">E-Kütüphane</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Medikal Hesaplayıcılar</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Videolar</a></li>
                    </ul>
                </nav>

                <nav>
                    <ul class="nav d-flex gap-1">
                        <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-person"></i> Giriş Yap</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="bi bi-search"></i> Ara</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
