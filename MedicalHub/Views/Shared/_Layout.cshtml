<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <script type="importmap"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link href="~/lib/splide/splide.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>

<body>
    <header class="position-absolute top-0 w-100 z-3">
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center">

                <div class="d-flex align-items-center">
                    <a href="#" class="logo pe-5 d-inline-block">
                        <img src="/images/light-logo.svg" width="140" alt="Logo">
                    </a>

                    <nav class="main-nav">
                        <ul class="nav gap-3">
                            <li class="nav-item"><a class="nav-link" href="#">E-Kütüphane</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Medikal Hesaplayıcılar</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Videolar</a></li>
                            <li class="nav-item"><a asp-controller="Admin" asp-action="Index" class="nav-link">Admin</a></li>
                        </ul>
                    </nav>
                </div>

                <nav>
                    <button class="btn btn-light">Giriş Yap</button>
                </nav>

            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="bg-light footer-section pt-5">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-12 col-md-4 mb-4 mb-md-0 d-flex flex-column">
                    <img src="~/images/dark-logo.svg" class="mb-3" width="180" />
                    <div class="w-75">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam et lacinia mi.
                    </div>
                </div>

                <div class="col-12 col-md-4 mb-4 mb-md-0 d-flex flex-column">
                    <h3 class="mb-3">Sosyal</h3>
                    <div class="w-75">
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam et lacinia mi.
                    </div>
                </div>

                <div class="col-6 col-md-2 mb-4 mb-md-0 d-flex flex-column">
                    <h3 class="mb-3">Sayfalar</h3>
                    <ul class="list-unstyled">
                        <li>MEDICUS</li>
                        <li>MEDICUS</li>
                        <li>MEDICUS</li>
                        <li>MEDICUS</li>
                        <li>MEDICUS</li>
                    </ul>
                </div>

                <div class="col-6 col-md-2 d-flex flex-column">
                    <h3 class="mb-3">Admin</h3>
                </div>

            </div>

            <div class="text-center py-3 border-top">
                <small class="text-muted">
                    © Nobelyum 2025 | Bu sitedeki bilgiler, bir hekim veya eczacıya danışmanın yerine geçemez.
                    Daha fazla bilgi için bir hekime ve/veya eczacıya başvurunuz.
                    Güncellenme Tarihi: 30.11.2025
                </small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/splide/splide.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        AOS.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
